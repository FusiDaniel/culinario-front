{
  "name": "portfolio",
  "private": true,
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "turbo:lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "node-server": "cd apps/node-server && yarn dev",
    "mobile": "cd apps/mobile && yarn start"
  },
  "devDependencies": {
    "turbo": "2.4.4",
    "typescript": "5.8.2"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
