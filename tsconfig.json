{
  "extends": "./tsconfig.base",
  "compilerOptions": {
    "paths": {
      "app/*": [
        "./packages/app/*"
      ],
      "@repo/ui/*": [
        "./packages/ui/*"
      ]
    },
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true
  },
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/types",
    "apps/next/out",
    "apps/next/.next",
    "apps/next/.tamagui"
  ]
}
